%h3 Add a song
= form_for @song do |form|
  = form.url_field :song_url, placeholder: "Song URL", required: true
  = form.text_field :notes, placeholder: "Notes"
  = form.submit "Submit"

%h2.category= 'White tea' if @songs.white.present?
= render @songs.white

%h2.category= 'Green tea' if @songs.green.present?
= render @songs.green

%h2.category= 'Black tea' if @songs.black.present?
= render @songs.black

%h2.category= 'Herbal tea' if @songs.herbal.present?
= render @songs.herbal
